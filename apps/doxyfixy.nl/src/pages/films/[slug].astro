---
import Layout from '../../components/Layout.astro';
import Page from '@doxyfixy/components/src/page/Page.svelte';
import Card from '@doxyfixy/components/src/card/Card.svelte';


export async function getStaticPaths() {

    const filmsRes = await fetch('https://doxyfixy.lotsofpeople.nl/wp-json/wp/v2/film?_fields[]=slug');
    const films = await filmsRes.json();

    return films.map(film => {
        return {
            params: {slug: film.slug}
        }
    });
}

const { slug } = Astro.params;
console.info('slug', slug);
const filmsRes = await fetch('https://doxyfixy.lotsofpeople.nl/wp-json/wp/v2/film?slug=' + slug);
const films = await filmsRes.json();
const film = films[0];
console.info('film', film);

// const imageRes = await fetch(`https://doxyfixy.lotsofpeople.nl//wp-json/wp/v2/media/${film.featured_image.ID}`);
// const image = imageRes.json();

const genresRes = await fetch('https://doxyfixy.lotsofpeople.nl//wp-json/wp/v2/genre');
const genres = await genresRes.json();
const genreNames = Object.fromEntries(genres.map(genre => ([genre.id, genre.name])));

console.info(film.credits.split(/\n\n/g))
---

<Layout title={film.title.rendered} logoColor="white">

    <Card
        slot="header"
        title={film.title.rendered}
        subtitle={film.synopsis.split(/\./g)[0]}
        tags={(film.genre || []).map(id => genreNames[id])}
        size="hero"
    >
    <img
        src={film.featured_image.guid}
        decoding="async"
        loading="lazy"
    >   
    </Card>

	<Page>

        <article>

            <p>
                {film.synopsis}
            </p>

            <p class="video-container"><iframe src={`https://player.vimeo.com/video/${film.vimeo_trailer_url?.match(/[0-9]+/)?.[0]}?h=a7ad9099dc&title=0&byline=0&portrait=0`} style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe></p>

            <h4>Cast</h4>
            <ul>
                <div set:html={film.cast}></div>
            </ul>

            {film.credits ?
            <h4>Credits</h4>
            <ul>
                <div set:html={film.credits}></div>
            </ul>
            : ''}

            <p>
                <img
                    src={film.poster.guid}
                    loading="lazy"
                    decoding="async"
                    style="max-height: 80vh"
                >
            </p>

            {film.festivals ?
                <h4>Festivals</h4>
            <ul>
                <div set:html={film.festivals}></div>
            </ul>
            : ''}

            {film.reviews ?
            <h4>Recensies</h4>
            <div set:html={film.reviews}></div>
            : ''}

    </article>

	</Page>

</Layout>